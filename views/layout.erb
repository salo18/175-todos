<!doctype html>
<html lang="en-US">
  <head>
    <a href="/lists"><title>Todo App</title></a>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>
  <body>
    <header>
      <h1>Salo Todo Tracker</h1>

      <div class="actions">
        <%= yield_content :header_links %>
      </div>
    </header>

    <% if no_lists?(session[:lists]) %>
      <p>To get started, click the "New List" button and add a new todo list.</p>
    <% end %>

    <% if session[:success] %>
      <div class="flash success">
        <p> <%= session.delete(:success)%> </p>
      </div>
    <% end %>

    <% if session[:error] %>
      <div class="flash error">
        <p> <%= session.delete(:error)%> </p>
      </div>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
